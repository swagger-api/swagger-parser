{
    "$id": "https://example.com/customer.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "attributes": {
            "id": "#/definitions/attributes",
            "type": "object",
            "required": [
                "name"
            ],
            "properties": {

                "name": {
                    "type": "string"
                },
                "sector": {
                    "type": "string"
                }
            }
        },
        "post": {
            "id": "#/definitions/post",
            "type": "object",
            "properties":{
                "type": {
                    "type": "string"
                },
                "attributes": {
                    "$ref": "#/definitions/attributes"
                }
            }
        },
        "get": {
            "id": "#/definitions/get",
            "type": "object",
            "properties":{
                "id": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "attributes": {
                    "allOf": [
                        { 
                            "$ref": "#/definitions/attributes"
                        },
                        {
                            "properties": {
                                "createdOn": {
                                    "type": "string",
                                    "format": "date-time"        
                                },
                                "updatedOn": {
                                    "type": "string",
                                    "format": "date-time"        
                                }
                            }
                        }
                    ]
                }
            }
        }
    }
}